  "bugs": {
    "url": "https://github.com/prashobh2003/proshop/issues"
  },
  "homepage": "https://github.com/prashobh2003/proshop#readme",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.7",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.13.2",
    "multer": "^1.4.5-lts.2",
    "react-router-bootstrap": "^0.26.3"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "dotenv": "^16.5.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3"
